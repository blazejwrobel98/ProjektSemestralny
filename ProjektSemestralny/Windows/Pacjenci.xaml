<Page x:Class="ProjektSemestralny.Pacjenci"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        xmlns:extensions="using:Microsoft.Toolkit.Uwp.UI.Extensions"
        Title="Pacjenci" Height="450" Width="800">
    <Grid>
        <Button Content="POWRÓT" Margin="0,0,50,25" VerticalAlignment="Bottom" HorizontalAlignment="Right"  Width="80" Height="25" Click="Button_Click"/>
        <DataGrid x:Name="DataTable" Margin="48,25,48,200" MouseDoubleClick="Mouse_Click" CanUserAddRows="False" CanUserResizeColumns="False" CanUserResizeRows="False" CanUserReorderColumns="False" IsReadOnly="True"/>
        <TextBox x:Name="Input_Imie" HorizontalAlignment="Left" Height="23" Margin="54,279,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="20" PreviewTextInput="TextValidationTextBox"/>
        <TextBox x:Name="Input_Nazwisko" HorizontalAlignment="Left" Height="23" Margin="201,279,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="40" PreviewTextInput="TextValidationTextBox"/>
        <TextBox x:Name="Input_Pesel" HorizontalAlignment="Left" Height="23" Margin="351,279,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="11" PreviewTextInput="NumberValidationTextBox"/>
        <TextBox x:Name="Input_KodPocztowy" HorizontalAlignment="Left" Height="23" Margin="54,328,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="6" PreviewTextInput="PostCodeValidationTextBox"/>
        <TextBox x:Name="Input_Miejscowosc" HorizontalAlignment="Left" Height="23" Margin="201,328,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="40" PreviewTextInput="PostCodeValidationTextBox"/>
        <TextBox x:Name="Input_Ulica" HorizontalAlignment="Left" Height="23" Margin="351,328,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="40" PreviewTextInput="PostCodeValidationTextBox"/>
        <TextBox x:Name="Input_NrDomu" HorizontalAlignment="Left" Height="23" Margin="51,380,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="4"/>
        <TextBox x:Name="Input_NrLokalu" HorizontalAlignment="Left" Height="23" Margin="201,380,0,0" TextWrapping="NoWrap" VerticalAlignment="Top" Width="120" MaxLength="3"/>
        <Label Content="Imie" HorizontalAlignment="Left" Margin="96,253,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="229,253,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Pesel" HorizontalAlignment="Left" Margin="391,253,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Kod Pocztowy" HorizontalAlignment="Left" Margin="71,302,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Miejscowosc" HorizontalAlignment="Left" Margin="229,302,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Ulica" HorizontalAlignment="Left" Margin="390,302,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Nr Domu" HorizontalAlignment="Left" Margin="80,354,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Label Content="Nr Lokalu" HorizontalAlignment="Left" Margin="230,354,0,0" VerticalAlignment="Top" Foreground="White"/>
        <Button Content="ZMIEŃ" HorizontalAlignment="Left" Margin="573,0,0,55" Width="80" Click="Button_Click_1" Height="25" VerticalAlignment="Bottom"/>
        <Button Content="USUŃ" Margin="0,0,232,55" Click="Button_Click_2" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="80"/>
        <Button Content="DODAJ" HorizontalAlignment="Left" Margin="573,0,0,25" Width="80" Click="Button_Click_3" Height="25" VerticalAlignment="Bottom"/>
        <Button Content="WYCZYŚĆ" HorizontalAlignment="Right" Margin="0,0,232,25" Width="80" Click="Button_Click_4" Height="25" VerticalAlignment="Bottom"/>
        <Label x:Name="AlertLabel" HorizontalAlignment="Left" Margin="502,271,0,0" VerticalAlignment="Top" Height="80" Width="250"/>

    </Grid>
</Page>
