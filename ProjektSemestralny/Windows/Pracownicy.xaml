        <Label Content="Nazwisko" HorizontalAlignment="Left" Margin="240,249,0,0" VerticalAlignment="Top"/>
        <Label Content="Pesel" HorizontalAlignment="Left" Margin="426,249,0,0" VerticalAlignment="Top"/>
