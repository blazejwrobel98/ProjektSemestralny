<Window x:Class="ProjektSemestralny.Wizyty"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektSemestralny"
        mc:Ignorable="d"
        Title="Wizyty" Height="450" Width="800" Loaded="MainWindow_Loaded">
    <Grid>
        <Button Content="ZAKOŃCZ" HorizontalAlignment="Left" Margin="669,366,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <DataGrid x:Name="DataTable" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="330" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Path='WizytaID'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Pacjent" Binding="{Binding Path='Pacjent'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Termin" Binding="{Binding Path='Termin'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Godzina" Binding="{Binding Path='Godzina'}" IsReadOnly="True" />
                <DataGridTextColumn Header="Pracownik" Binding="{Binding Path='Pracownik'}" IsReadOnly="True" />
                <DataGridTemplateColumn Header="PacjentID">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Expander Name="Pacjent_info" Expanded="ExpanderGenerator"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
